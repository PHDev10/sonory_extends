<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootPane" spacing="15" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.edu.ifpb.sonoryextends.controller.ConvertController">

    <Label text="Sonory Extends - Conversor de Ãudio"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Button text="Selecionar Arquivo"
            onAction="#handleSelectFile" />

    <Label fx:id="fileLabel" text="Nenhum arquivo selecionado" />

    <ComboBox fx:id="formatComboBox"
              promptText="Selecione o formato de destino" />

    <Button text="Selecionar Pasta de Destino"
            onAction="#handleSelectFolder"/>

    <Label fx:id="folderLabel"
           text="Nenhuma pasta selecionada"/>

    <Button text="Converter"
            onAction="#handleConvert" />

    <ProgressBar fx:id="progressBar"
                 prefWidth="300.0" />

</VBox>
